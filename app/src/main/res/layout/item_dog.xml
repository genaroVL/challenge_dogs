<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/cdv_dog_height"
            app:layout_constraintBottom_toBottomOf="@+id/cdv_imv_dog"
            app:layout_constraintStart_toStartOf="@+id/guideline1"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:background="@drawable/bg_card_dog"
            android:paddingTop="@dimen/cdv_dog_padding"
            android:paddingStart="@dimen/cdv_dog_padding_large"
            android:paddingLeft="@dimen/cdv_dog_padding_large">

            <TextView
                android:id="@+id/tv_dog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chief"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dog_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_margintop_medium"
                android:text="description"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_dog_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="agege"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_regular"
                android:textStyle="bold" />
        </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/cdv_imv_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_dog"
            android:layout_width="@dimen/imv_dog_with"
            android:layout_height="@dimen/imv_dog_heigth"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="115dp" />

</androidx.constraintlayout.widget.ConstraintLayout>